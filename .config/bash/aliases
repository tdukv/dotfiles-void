# shellcheck shell=bash

# Shortning
alias e="emacs"
alias g="grep --exclude-dir='.git' -rnI"
alias +x="chmod -v u+x"
alias hl="highlight"
alias scat="highlight" # syntax cat
alias h="head"
alias l="less"
alias ..='cd ..'

# Default options
alias mkdir="mkdir -pv"
alias ncdu="ncdu -x --confirm-quit --color dark"
alias ls="ls -F --color=auto"
alias rm="rm -I"
alias dd="dd bs=4k status=progress"
alias cal="cal -m" # weeks start on monday
alias ytdlp="yt-dlp --continue"

# account for line number width in less
# Void:
alias man='man -O width=$(($COLUMNS-12))'
# Debian:
# alias man='MANWIDTH=$(($COLUMNS-12)) man'

# pip virtual environment
alias pipenv='source $HOME/.local/pip.venv/bin/activate'

# cp and mv with progress bar
alias cp='/usr/local/bin/advcp -g'
alias mv='/usr/local/bin/advmv -g'

# other
alias lolcat="clolcat"

# prevent getting incorect $SHLVL in graphic terminals
alias startx="exec startx"

alias dotfiles='/usr/bin/git --git-dir=$HOME/.local/share/.dotfiles.git/ --work-tree=$HOME'
alias doxfiles='/usr/bin/git --git-dir=$HOME/.local/share/.doxfiles.git/ --work-tree=$HOME'
