#!/bin/sh

### 1080p ###
height=1080
### 1440p ###
## height=1440

while getopts 'd' o; do
   case $o in
      d) height=$(printf "1440\n1080\n720\n480\n320" | dmenu -p 'Resolution?')
         shift
         ;;
      ?) ;;
   esac
done

[ -z "$height" ] && exit 1

url=${1:-$(xclip -o -selection primary)}

notify-send "mpvurl" \
            "Trying \"${url}\" with h=${height}\n(Final resolutions may differ.)"

if ! mpv --keep-open=yes \
     --ytdl-format="(bestvideo[height<=?${height}]+bestaudio/best)" "$url"
then
    notify-send "mpvurl" "Can't play \"${url}\""
    exit 1
fi

exit 0
