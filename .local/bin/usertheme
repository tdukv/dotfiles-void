#!/bin/sh
# shellcheck disable=SC2046

case "$0" in
  *randtheme)
    theme="random_dark" ;;
  *darktheme)
    theme="$(basename -s .json $(find /usr/lib/python3.9/site-packages/pywal/colorschemes/dark/ -type f) | sort | dmenu -i -r -g 2)" ;;
  *lighttheme)
    theme="$(basename -s .json $(find /usr/lib/python3.9/site-packages/pywal/colorschemes/light/ -type f) | sort | dmenu -i -r -g 2)"
    lightopt="l"  ;;
  *)
    theme="$(basename -s .json $(find ~/.config/wal/colorschemes/dark/ -type f) | sort | dmenu -i -r -g 2)" ;;
esac

[ -z "$theme" ] && exit 0

pkill -u "$USER" -x dunst
notify-send "$(wal --theme "$theme" -"$lightopt"sto updatecolors | grep --color=none -o "Set theme.*" | sed -r "s/\x1B\[([0-9]{1,3}(;[0-9]{1,2})?)?[mGK]//g")"
