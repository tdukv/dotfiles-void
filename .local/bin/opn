#!/bin/sh

term=${TERMCMD:-st}
pager=${PAGER:-less}
browser=${BROWSER:-firefox}

for f in "$@" ; do
# shellcheck disable=SC2015
    [ -f "$f" ] && [ -r "$f" ] || continue
    type="$(file -b --mime-type "$f")"
    case "$type" in
        text/html)
            "$browser" "$(realpath "$f")"       ;;
        text/*|*/json)
            "$term" -e "$pager" "$f"            ;;
        image/gif)
            nsxiv -a "$f"                       ;;
        image/*)
            nsxiv "$f"                          ;;
        video/*|*/octet-stream)
            mpv "$f"                            ;;
        audio/*)
            "$term" -e mpv "$f"                 ;;
        */pdf)
            mupdf "$f"                          ;;
        inode/x-empty)
            xmessage -nearmouse "Empty!"        ;;
        *)
            notify-send "unknown type:" "$type" ;;
    esac
done
